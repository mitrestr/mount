.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header__menu {
  width: 55%;

  @include tablets {
    display: none;

  }
}

.header__buttons {
  @include phones {
    display: none;

  }
}

.header__sandwich {
  z-index: 1;
  display: none;
  @include tablets {
    display: block;
  }
}